<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ReGrowth: Aspen Forests</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ================ Biome Apsen Forest ================ -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "RG-AF_AspenForest"]/wildPlants</xpath>
					<value>
						<wildPlants>
							<RG_Plant_Raspberry>0.03</RG_Plant_Raspberry>
						</wildPlants>
					</value>
				</li>
			</operations>

		</match>
	</Operation>

</Patch>