				<!-- ================ Biome Sea Ice ================ -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName = "Sea Ice"]/baseWeatherCommonalities</xpath>
					<value>
						<RG_FoggySnow>6</RG_FoggySnow>
