<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
			<li>Core</li>
			<li>[HLX] ReGrowth - Wasteland</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
			<operations>
                <!-- ================ Biome Wasteland ================ -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName = "RG-W_Wasteland"]/baseWeatherCommonalities</xpath>
                    <value>
                        <RG_Drizzle>2</RG_Drizzle>
                        <RG_FoggySnow>2</RG_FoggySnow>
                        <RG_Overcast>6</RG_Overcast>
						<RG_Windy>8</RG_Windy>
						<RG_Blizzard>0.5</RG_Blizzard>
						<RG_Monsoon>0.5</RG_Monsoon>
                    </value>
                </li>
			</operations>
			
		</match>
	</Operation>
	
</Patch>