<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
          <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
			<operations>
				<!-- ================ Biome Temperate Forest ================ -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/plantDensity</xpath>
					<value>
						<plantDensity>1.2</plantDensity>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_Grass</xpath>
					<value>
						<Plant_Grass>8.0</Plant_Grass>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_Brambles</xpath>
					<value>
						<Plant_Brambles>1.0</Plant_Brambles>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_Dandelion</xpath>
					<value>
						<Plant_Dandelion>0.8</Plant_Dandelion>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_Bush</xpath>
					<value>
						<Plant_Bush>1.2</Plant_Bush>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_TreeOak</xpath>
					<value>
						<Plant_TreeOak>2.0</Plant_TreeOak>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_TreePoplar</xpath>
					<value>
						<Plant_TreePoplar>1.8</Plant_TreePoplar>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants/Plant_Berry</xpath>
					<value>
						<Plant_Berry>0.20</Plant_Berry>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName = "TemperateForest"]/wildPlants</xpath>
					<value>
						<Plant_TreePine>1.2</Plant_TreePine>
					</value>
				</li>

				<!-- ================ Biome Temperate Swamp ================ -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/BiomeDef[defName = "TemperateSwamp"]/plantDensity</xpath>
					<value>
						<plantDensity>2.25</plantDensity>
					</value>
				</li>
			</operations>
			
		</match>
	</Operation>
	
</Patch>